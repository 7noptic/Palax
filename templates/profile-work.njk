{% extends 'base.njk' %}

{% set pageName = 'ПРОФИЛЬ' %}
{% set asideActiveId = 2 %}

{% import 'components/_macros.njk' as macros %}

{% block content %}

    <section class="page profile content">
        {% include 'parts/_pager.njk' %}

        <h2 class="block-title page__title">
            <i>
                {{ macros.svgIcon('user','gold','','','32px') }}
            </i>
            <span>ПРОФИЛЬ</span>
        </h2>

        <div class="profile__content flex-container">
            {% include 'parts/_profile-aside.njk' %}

            <div class="profile__right">
                <form action=".php" class="profile__form spacer">
                    <div class="profile__form-fields">
                        <label class="profile__label">
                            <span class="profile__label-title">Название компании</span>
                            <input type="text" name="company" class="profile__field">
                        </label>

                        <label class="profile__label">
                            <span class="profile__label-title">Должность</span>
                            <input type="text" name="position" class="profile__field">
                        </label>

                        <label class="profile__label">
                            <span class="profile__label-title">ИНН</span>
                            <input type="text" name="inn" class="profile__field">
                        </label>

                        <button class="profile__btn">Сохранить</button>

                    </div><!--profile__form-fields-->

                </form>

            </div>

        </div><!--profile__content-->

    </section><!--page-->

{% endblock content %}
