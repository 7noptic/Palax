{% extends 'base.njk' %}

{% set pageName = 'ПРОФИЛЬ' %}
{% set asideActiveId = 1 %}

{% import 'components/_macros.njk' as macros %}

{% block content %}

    <section class="page profile content">
        {% include 'parts/_pager.njk' %}

        <h2 class="block-title page__title">
            <i>
                {{ macros.svgIcon('user','gold','','','32px') }}
            </i>
            <span>ПРОФИЛЬ</span>
        </h2>

        <div class="profile__content flex-container">
            {% include 'parts/_profile-aside.njk' %}

            <div class="profile__right">
                <form action=".php" class="profile__form spacer">
                    <div class="profile__form-fields">
                        <label class="profile__label">
                            <span class="profile__label-title">Имя</span>
                            <input type="text" name="name" class="profile__field">
                        </label>

                        <label class="profile__label">
                            <span class="profile__label-title">Фамилия</span>
                            <input type="text" name="surname" class="profile__field">
                        </label>

                        <label class="profile__label">
                            <span class="profile__label-title">Отчество</span>
                            <input type="text" name="middleName" class="profile__field">
                        </label>

                        <label class="profile__label">
                            <span class="profile__label-title">E-mail</span>
                            <input type="text" name="email" class="profile__field">
                        </label>

                        <label class="profile__label">
                            <span class="profile__label-title">Город</span>
                            <input type="text" name="city" class="profile__field">
                        </label>

                        <label class="profile__label">
                            <span class="profile__label-title">Телефон</span>
                            <input type="text" name="phone" class="profile__field">
                        </label>

                        <button class="profile__btn">Сохранить</button>

                    </div><!--profile__form-fields-->

                    <div class="profile__form-right">
                        <label class="profile__photo va-middle">
                            <input type="file">
                            <span class="profile__photo-desc">
                                Загрузите Вашу <br> фотографию
                            </span>

                            <span class="profile__photo-btn">
                                {{ macros.svgIcon('photo','gold','','pos-center','') }}
                            </span>

                        </label>

                    </div><!--profile__form-right-->

                </form>

            </div><!--profile__right-->

        </div><!--profile__content-->

    </section><!--page-->

{% endblock content %}
