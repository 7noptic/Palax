{% extends 'base.njk' %}

{% set pageName = 'ПРОФИЛЬ' %}
{% set asideActiveId = 3 %}

{% import 'components/_macros.njk' as macros %}

{% block content %}

    <section class="page profile content">
        {% include 'parts/_pager.njk' %}

        <h2 class="block-title page__title">
            <i>
                {{ macros.svgIcon('user','gold','','','32px') }}
            </i>
            <span>ПРОФИЛЬ</span>
        </h2>

        <div class="profile__content flex-container">
            {% include 'parts/_profile-aside.njk' %}

            <div class="profile__right">
                <form action=".php" class="profile__form spacer">
                    <div class="profile__form-fields">
                        <p class="profile__form-title">СМЕНА ПАРОЛЯ</p>

                        <label class="profile__label">
                            <span class="profile__label-title">Пароль</span>
                            <input type="password" name="pass" class="profile__field">
                        </label>

                        <label class="profile__label">
                            <span class="profile__label-title">Новый пароль</span>
                            <input type="password" name="newPass" class="profile__field">
                        </label>

                        <label class="profile__label">
                            <span class="profile__label-title">Повторите пароль</span>
                            <input type="password" name="newPassRepeat" class="profile__field">
                        </label>

                        <button class="profile__btn">Сохранить</button>

                    </div><!--profile__form-fields-->

                    <div class="profile__form-right profile__info">
                        <p class="profile__info-title">
                            ОБРАТИТЕ ВНИМАНИЕ:
                        </p>

                        <p class="profile__info-desc">
                            Пароль должен быть не менее 6 символов длиной.
                        </p>

                    </div><!--profile__form-right-->

                </form>

            </div>

        </div><!--profile__content-->

    </section><!--page-->

{% endblock content %}
